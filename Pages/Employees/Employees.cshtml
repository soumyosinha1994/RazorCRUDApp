@page
@model BulkyAppRazor.Pages.Employees.EmployeesModel
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Employee List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Employees/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Employee
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Employee Name
                </th>
                <th>
                    Employee Address
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.employees)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>
                        @obj.Address
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Employees/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="/Employees/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>